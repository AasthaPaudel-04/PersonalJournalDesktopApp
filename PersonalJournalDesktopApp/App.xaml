<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PersonalJournalDesktopApp"
             xmlns:converters="clr-namespace:PersonalJournalDesktopApp.Converters"
             x:Class="PersonalJournalDesktopApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Register Value Converters -->
            <converters:EntryButtonTextConverter x:Key="EntryButtonTextConverter"/>
            <converters:IsNotNullConverter x:Key="IsNotNullConverter"/>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>

            <!-- MODERN THEME: White for Light, Black for Dark -->
            <!-- These colors change dynamically when theme toggles -->

            <!-- Default to Light Theme (White) -->
            <Color x:Key="PrimaryBackground">#ffffff</Color>
            <!-- Pure white -->
            <Color x:Key="SecondaryBackground">#f8f9fa</Color>
            <!-- Very light gray -->
            <Color x:Key="AccentColor">#3b82f6</Color>
            <!-- Blue -->
            <Color x:Key="PrimaryText">#111827</Color>
            <!-- Almost black -->
            <Color x:Key="SecondaryText">#6b7280</Color>
            <!-- Medium gray -->
            <Color x:Key="CardBackground">#ffffff</Color>
            <!-- White cards -->
            <Color x:Key="BorderColor">#e5e7eb</Color>
            <!-- Light border -->

            <!-- Global Styles -->
            <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
                <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryBackground}" />
            </Style>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{DynamicResource SecondaryBackground}" />
                <Setter Property="BarTextColor" Value="{DynamicResource PrimaryText}" />
            </Style>

            <!-- Frame Style -->
            <Style TargetType="Frame">
                <Setter Property="BorderColor" Value="{DynamicResource BorderColor}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
