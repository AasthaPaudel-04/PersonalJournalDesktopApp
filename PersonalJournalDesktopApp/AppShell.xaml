<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PersonalJournalDesktopApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PersonalJournalDesktopApp.Views"
    FlyoutBackgroundColor="{DynamicResource SecondaryBackground}">

    <TabBar>
        <ShellContent
            Title="Journal"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Search"
            ContentTemplate="{DataTemplate local:SearchPage}"
            Route="SearchPage" />

        <ShellContent
            Title="Analytics"
            ContentTemplate="{DataTemplate local:AnalyticsPage}"
            Route="AnalyticsPage" />

        <ShellContent
            Title="Security"
            ContentTemplate="{DataTemplate local:SecurityPage}"
            Route="SecurityPage" />
    </TabBar>

</Shell>
