<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PersonalJournalDesktopApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PersonalJournalDesktopApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <!-- FIXED: Shell visual appearance now respects theme -->
    <Shell.Resources>
            <Style TargetType="TabBar">
                <Setter Property="Shell.BackgroundColor" Value="{DynamicResource SecondaryBackground}" />
                <Setter Property="Shell.ForegroundColor" Value="{DynamicResource PrimaryText}" />
                <Setter Property="Shell.UnselectedColor" Value="{DynamicResource SecondaryText}" />
                <Setter Property="Shell.TitleColor" Value="{DynamicResource PrimaryText}" />
            </Style>

            <Style TargetType="ShellContent">
                <Setter Property="Shell.BackgroundColor" Value="{DynamicResource SecondaryBackground}" />
                <Setter Property="Shell.ForegroundColor" Value="{DynamicResource PrimaryText}" />
                <Setter Property="Shell.UnselectedColor" Value="{DynamicResource SecondaryText}" />
                <Setter Property="Shell.TitleColor" Value="{DynamicResource PrimaryText}" />
            </Style>
    </Shell.Resources>

    <!-- Tab bar colors -->
    <TabBar Shell.BackgroundColor="{DynamicResource SecondaryBackground}"
            Shell.ForegroundColor="{DynamicResource PrimaryText}"
            Shell.TitleColor="{DynamicResource PrimaryText}">

        <ShellContent
            Title="Journal"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            Shell.BackgroundColor="{DynamicResource SecondaryBackground}"
            Shell.ForegroundColor="{DynamicResource PrimaryText}"
            Shell.TitleColor="{DynamicResource PrimaryText}">
            <ShellContent.Icon>
                <FontImageSource Glyph="ðŸ“" FontFamily="SegoeUIEmoji" Size="24"/>
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Search"
            ContentTemplate="{DataTemplate local:SearchPage}"
            Route="SearchPage"
            Shell.BackgroundColor="{DynamicResource SecondaryBackground}"
            Shell.ForegroundColor="{DynamicResource PrimaryText}"
            Shell.TitleColor="{DynamicResource PrimaryText}">
            <ShellContent.Icon>
                <FontImageSource Glyph="ðŸ”" FontFamily="SegoeUIEmoji" Size="24"/>
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Analytics"
            ContentTemplate="{DataTemplate local:AnalyticsPage}"
            Route="AnalyticsPage"
            Shell.BackgroundColor="{DynamicResource SecondaryBackground}"
            Shell.ForegroundColor="{DynamicResource PrimaryText}"
            Shell.TitleColor="{DynamicResource PrimaryText}">
            <ShellContent.Icon>
                <FontImageSource Glyph="ðŸ“Š" FontFamily="SegoeUIEmoji" Size="24"/>
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Security"
            ContentTemplate="{DataTemplate local:SecurityPage}"
            Route="SecurityPage"
            Shell.BackgroundColor="{DynamicResource SecondaryBackground}"
            Shell.ForegroundColor="{DynamicResource PrimaryText}"
            Shell.TitleColor="{DynamicResource PrimaryText}">
            <ShellContent.Icon>
                <FontImageSource Glyph="ðŸ”’" FontFamily="SegoeUIEmoji" Size="24"/>
            </ShellContent.Icon>
        </ShellContent>
    </TabBar>

</Shell>
